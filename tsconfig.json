{
    "compilerOptions": {
        "outDir": "dist",
        "strict": true,
        "noUnusedLocals": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "declaration": false,
        "target": "es5",
        "jsx": "react",
        "lib": [
            "esnext", "dom"
          ]
    },
    "include": [
        "./src/**/*",
    ],
    "exclude": 
    [
        "node_modules", "**/*.test.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "silent": true,
    }
}